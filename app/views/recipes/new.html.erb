<h1 class="text-center py-4">Create Recipe</h1>

<%= form_with model: @recipe, url: recipes_path, html: { class: "d-flex justify-content-center align-items-center flex-column gap-4" }, method: :post do |f| %>

  <div class="form-group col-lg-6">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :preparation_time %>
    <%= f.number_field :preparation_time, class: "form-control" %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :cooking_time %>
    <%= f.number_field :cooking_time, class: "form-control" %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group col-sm-6">
    <%= f.check_box :public, class: "form-check-input", id: "flexSwitchCheckChecked" %>
    <%= f.label :public, class: "form-check-label", for: "flexSwitchCheckChecked" %>
  </div>

  <%= f.submit "Create", class: "btn btn-primary mt-4" %>
<% end %>
