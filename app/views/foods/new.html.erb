<h1 id = "form-title">Add new Food</h1>
<%= form_with(model: [@food], url: foods_path) do |form| %>
  <div class = "form-container">
    <div class="field">
      <%= form.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Food Name", class: "border-black border-solid border-2 mt-4" %>
    </div>
    <div class="field">
      <%= form.text_field :measurement_unit, autofocus: true, autocomplete: "measurement_unit", placeholder: "Measurement Unit", class: "border-black border-solid border-2 mt-4" %>
    </div>
    <div class="field">
      <%= form.number_field :price, autofocus: true, autocomplete: "price", placeholder: "Price", class: "border-black border-solid border-2 mt-4" %>
    </div>



    <div class="actions">
      <%= form.submit 'Create Food' %>
    </div>
  </div>
<% end %>