<h1>Add food</h1>

<%= form_with model: @food, url: foods_path, method: :post  do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :quantity %><br>
    <%= form.text_field :measurement_unit %>
  </div>
 <div>
   <%= form.label :price %><br>
   <%= form.number_field :price, in: 1.0..20.0, step: 0.5 %>
 </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
