<h1>Inventory Name:  <%= @inventory.name %></h1>
<%# if can? :create, inventory %>
  <a class = "btn-container" href="<%= new_inventory_food_path(inventory_id: @inventory.id) %> " >
    <button class='new-post-btn text-center p-1 border-solid border-black border-2'>Add new Food to Inventory</button>
  </a>
<%# end %>
<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @inventory_foods.each do |inventory_food| %>
      <tr>
        <% food = Food.find_by(id: inventory_food.food_id) %>
        <% if food %>
          <td><%= food.name %></td>
          <td><%= inventory_food.quantity %></td>
          <td>
            <%# if can? :destroy, inventory_food %>
              <%= render partial: 'shared/delete', locals: { model: inventory_food, url: inventory_food_path(inventory_food) } %>   
            <%# end %>
          </td>
        <% else %>
          <td></td>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>