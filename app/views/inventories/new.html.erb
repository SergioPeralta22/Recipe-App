<h1 id = "form-title">Create a New Inventory</h1>
<%= form_with(model: [@inventory], url: inventories_path) do |form| %>
  <div class = "form-container">
    <div class="field">
      <%= form.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Inventory Name", class: "border-black border-solid border-2 mt-4" %>
    </div>

    

    <div class="actions">
      <%= form.submit 'Create Inventory' %>
    </div>
  </div>
<% end %>