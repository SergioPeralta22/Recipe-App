<h1 class= "text-center m-2">Inventories</h1>

<ul id="inventories" class = "m-0 p-0">
  <% @inventories.each do |inventory| %>
    <div class = "inventory-box d-flex justify-content-center mt-3" href="<%= inventory_path(inventory) %>">
      <div class = "col-md-3 border border-2 border-secondary d-flex justify-content-around align-items-center flex-wrap">
        <a class = "btn btn-outline-primary col-md-6 text-wrap text-break" href="<%= inventory_path(inventory) %>">
          <%= inventory.name %>
        </a> 
        <%# if can? :destroy, inventory %>
          <%= render partial: 'shared/delete', locals: { model: inventory, url: inventory_path(inventory) } %>   
        <%# end %>
      </div>
      <div class = "col-md-6 border border-2 border-secondary">
        <p class = "inventory-description p-2 m-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec vel egestas dolor, nec dignissim metus. Donec augue elit, rhoncus ac sodales id, porttitor vitae est. Donec laoreet rutrum libero sed pharetra.</p>
      </div>
    </div>
  <% end %>
</ul>
<%# if can? :create, inventory %>
  <a class = "d-flex justify-content-center" href="<%= new_inventory_path(@user) %>">
    <button class='btn btn-primary mt-3'>Create a new Inventory</button>
  </a>
<%# end %>